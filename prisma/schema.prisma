generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  profiles  Profile[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  selectedProfileId Int?
  selectedProfile   Profile? @relation(fields: [selectedProfileId], references: [id])

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Profile {
  id         Int            @id @default(autoincrement())
  name       String
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  movies     ProfileMovie[]
  avatar   String
  movieRatings    ProfileMovieRating[]
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  sessions   Session[]
}

/**
 * Instead of storing full movie details,
 * we only store a reference to an external source.
 */
model ExternalMovie {
  id        Int       @id @default(autoincrement())
  externalId String    @unique  // e.g. TMDB or IMDb ID
  // optional cached metadata
  title     String
  posterUrl String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  profiles  ProfileMovie[]
  profilesRating ProfileMovieRating[]
}

model ProfileMovie {
  profile     Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId   Int
  movie       ExternalMovie     @relation(fields: [movieId], references: [externalId], onDelete: Cascade)
  movieId     String
  addedAt     DateTime  @default(now())
  updatedAt             DateTime  @updatedAt


  @@id([profileId, movieId]) // composite primary key
}

model ProfileMovieRating {
  profile     Profile       @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId   Int
  movie       ExternalMovie @relation(fields: [movieId], references: [externalId], onDelete: Cascade)
  movieId     String
  rating      ThumbsRating
  ratedAt     DateTime      @default(now())
  updatedAt   DateTime  @updatedAt


  @@id(name:"profileMovieRatingId",[profileId, movieId]) // One rating per movie per profile
}

enum ThumbsRating {
  UP
  DOWN
}
